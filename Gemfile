source 'http://rubygems.org'

# Rails
gem 'rails', '4.2.3'
gem 'thin'

# Application
gem 'devise'
gem 'kaminari'
gem 'feedjira'
gem 'whenever'

# DB
gem 'sqlite3'

# JS & CSS
gem 'sass-rails'
gem 'uglifier', '>= 1.3.0'
gem 'jquery-rails'
gem 'twitter-bootstrap-rails'

# Views
gem 'haml'
gem 'haml-rails'
gem 'simple_form'

group :development, :test do
  gem 'better_errors'
  gem 'quiet_assets'
end

group :test do
  gem 'rspec-rails'
  gem 'factory_girl_rails'
end

# Windows does not include zoneinfo files, so bundle the tzinfo-data gem
gem 'tzinfo-data', platforms: [:mingw, :mswin, :x64_mingw, :jruby]
